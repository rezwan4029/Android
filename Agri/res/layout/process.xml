<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrd"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp" >

        <Button
            android:id="@+id/GENINFO"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/geninfo"
            />

        <Button
            android:id="@+id/CULTIVATION"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/cultivation"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp" >

         <Button
            android:id="@+id/IRRIGATION"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/irrigation"
		/>

        <Button
            android:id="@+id/DISEASE"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/dieases" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp" >

        <Button
            android:id="@+id/HARVEST"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"

            android:background="@drawable/harvest" />

        <Button
            android:id="@+id/FERTILIZER"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/fertilizer" />
    </LinearLayout>

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp" >

        <Button
            
            android:id="@+id/HARVEST_TIME"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            
            
            android:background="@drawable/harvesttime" />

        <Button
            android:id="@+id/PLACES"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"

            android:background="@drawable/places" />
    </LinearLayout>

</LinearLayout>